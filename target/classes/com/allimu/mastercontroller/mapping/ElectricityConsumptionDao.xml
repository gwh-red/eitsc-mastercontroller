		update electricity_consumption
		set is_upload=true
		where id =
		<foreach collection="electricityConsumptionList" index="electricityConsumption" open="(" separator="," close=")">
			#{electricityConsumption.id}
		</foreach>
	</update> -->
	
	<update id="updateElectricityConsumptionList">
		update electricity_consumption
		set
			is_upload=true
		where id in
		<foreach collection="electricityConsumptionList" item="item" open="(" separator="," close=")">
			#{item.id}
		</foreach>
	</update>
	

</mapper>